<%- include('header'); %>
<div style="overflow: hidden;" id="index" class="container">
  <div class="row">
    <div class="col-md-5">
      <h2>Dados do Cliente</h1>
      <form action="/clientes/incluir" method="POST" enctype="application/x-www-form-urlencoded">
        <div class="form-floating mb-2">
          <input required type="text" name="nome" max-length="40" class="form-control" id="nome" placeholder="name@example.com">
          <label for="floatingInput">Nome ou Razão Social</label>
        </div>
        <div class="form-floating mb-2">
          <input required type="text" name="cnpj_cpf" max-length="14" class="form-control" id="cnpj_cpf" placeholder="name@example.com">
          <label for="floatingInput">CPF ou CNPJ</label>
        </div>
        <div class="form-floating mb-2">
          <input required type="text" name="telefone" max-length="11" class="form-control" id="telefone" placeholder="name@example.com">
          <label for="floatingInput">Telefone</label>
        </div>
        <div class="form-floating mb-2">
          <input required type="email" name="email" max-length="50" class="form-control" id="email" placeholder="name@example.com">
          <label for="floatingInput">E-mail</label>
        </div>
        <div class="form-floating mb-2">
          <input required type="text" name="contato" max-length="20" class="form-control" id="contato" placeholder="name@example.com">
          <label for="floatingInput">Contato</label>
        </div>
        <div class="form-floating mb-2">
          <input required type="date" name="data_cadastro" class="form-control" id="" placeholder="name@example.com">
          <label for="floatingInput">Data da Entrada</label>
        </div>
        <label for="floati">Cliente Ativo ?</label>
        <div class="form-check">
          <input required value="NÃO" class="form-check-input" type="radio" name="ativo" id="radio-ativo">
          <label class="form-check-label" for="flexRadioDefault1">
            Não
          </label>
        </div>
        <div class="form-check">
          <input required value="SIM" class="form-check-input" type="radio" name="ativo" id="radio-inativo" checked>
          <label class="form-check-label" for="flexRadioDefault2">
            Sim
          </label>
        </div>
        <button type="submit"class="btn btn-success">Incluir Cliente</button>
      </form>
    </div>
  </div>
</div>
<%- include('footer'); %>