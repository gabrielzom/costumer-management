<%- include('header'); %>
<div style="overflow: hidden;" id="index" class="container">
  <div class="row">
    <div class="col-md-5">
      <h2>Dados do cliente à editar</h1>
      <form action="/clientes/editar/<%=cliente.id%>?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">
        
        <div class="form-floating mb-2">
          <input value="<%= cliente.nome %>" type="text" name="nome" max-length="40" id="nome" class="form-control" >
          <label for="floatingInput">Nome ou Razão Social</label>
        </div>
        <div class="form-floating mb-2">
          <input value="<%= cliente.cnpj_cpf %>" type="text" name="cnpj_cpf" max-length="14" id="cnpj_cpf" class="form-control"  >
          <label for="floatingInput">CPF ou CNPJ</label>
        </div>
        <div class="form-floating mb-2">
          <input value="<%= cliente.telefone %>" type="text" name="telefone" max-length="11" id="telefone" class="form-control"  >
          <label for="floatingInput">Telefone</label>
        </div>
        <div class="form-floating mb-2">
          <input value="<%= cliente.email %>" type="email" name="email" max-length="50" id="email" class="form-control" >
          <label for="floatingInput">E-mail</label>
        </div>
        <div class="form-floating mb-2">
          <input value="<%= cliente.contato %>" type="text" name="contato" max-length="20" id="contato" class="form-control" >
          <label for="floatingInput">Contato</label>
        </div>
        <div class="form-floating mb-2">
          <input value="<%= cliente.data_cadastro %>" type="date" name="data_cadastro" max-length="" id="" class="form-control" >
          <label for="floatingInput">Data da Entrada</label>
        </div>
        <label for="floati">Cliente Ativo ?</label>
        <div class="form-check">
          <input value="NÃO" class="form-check-input" type="radio" name="ativo" id="radio-ativo">
          <label class="form-check-label" for="flexRadioDefault1">
            Não
          </label>
        </div>
        <div class="form-check">
          <input value="SIM" class="form-check-input" type="radio" name="ativo" id="radio-inativo" checked>
          <label class="form-check-label" for="flexRadioDefault2">
            Sim
          </label>
        </div>
        <button type="submit" class="btn btn-success">
          Salvar alteração
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-square" viewBox="0 0 16 16">
            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
            <path d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.235.235 0 0 1 .02-.022z"/>
          </svg>
        </button>
      </form>
    </div>
  </div>
</div>
<%- include('footer'); %>