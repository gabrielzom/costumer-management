<%- include('header'); %>
<div style="overflow: hidden;" id="index" class="container">
  <div class="row">
    <div class="col-md-7">
      <h2>Dados do usuário</h2>
      <h5>Nome: <%=usuario.nome %></h5>
      <h5>E-mail: <%=usuario.email %></h5>
    </div>
    <div class="col-md-5">
      <h2>Alterar senha</h2>
      <% if (message == '') { %>
        <%} else { %>
        <div class="alert alert-danger">
          <%=message %>
        </div>
      <% } %>
      <form action="/usuario/alterar-senha/<%=usuario.id %>?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">
        <div class="form-floating mb-2">
          <input value="<%=senha %>" type="text" name="" value="" class="form-control" id="" placeholder="name@example.com" required>
          <label for="floatingInput">Senha atual</label>
        </div>
        <div class="form-floating mb-2">
          <input type="password" name="senha" class="form-control" id="" placeholder="name@example.com" required>
          <label for="floatingInput">Nova senha</label>
        </div>
        <div class="form-floating mb-2">
          <input type="password" name="confirmar_senha" class="form-control" id="" placeholder="name@example.com" required>
          <label for="floatingInput">Confirmar nova senha</label>
        </div>
        <button type="submit" class="btn btn-success">
          Salvar alteração
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-square" viewBox="0 0 16 16">
            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
            <path d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.235.235 0 0 1 .02-.022z"/>
          </svg>
        </button>
        <input style="visibility: hidden;" type="email" name="email" value="<%=usuario.email %>">
      </form>
    </div>
  </div>
</div>
<%- include('footer'); %>