<%- include('header'); %>
<div style="overflow: hidden;" id="index" class="container">
  <div class="row">
    <div class="col-md-5">
      <h2>Casastrar usuário</h2>
      <% if (message == '') { %>
        <%} else { %>
        <div class="alert alert-danger">
          <%=message %>
        </div>
      <% } %>
      <form action="/usuario/incluir" method="POST" enctype="application/x-www-form-urlencoded">
        <div class="form-floating mb-2">
          <input type="text" name="nome" class="form-control" max-length="25" placeholder="James Blunt" required>
          <label for="floatingInput">Nome e Sobrenome</label>
        </div>
        <div class="form-floating mb-2">
          <input type="email" name="email" class="form-control" placeholder="name@example.com" required>
          <label for="floatingInput">E-mail</label>
        </div>
        <div class="form-floating mb-2">
          <input type="password" name="senha" class="form-control" id="" placeholder="name@example.com" required>
          <label for="floatingInput">Senha</label>
        </div>
        <div class="form-floating mb-2">
          <input type="password" name="confirmar_senha" class="form-control" id="" placeholder="name@example.com" required>
          <label for="floatingInput">Confirmar senha</label>
        </div>

        <div class="form-floating mb-2">
          <input type="number" name="permissao" class="form-control" id="" placeholder="" required>
          <label for="floatingInput">Nível de permissão</label>
        </div>
        <div class="mb-2">
          <ol>
            <li>Gerente</li>
            <li>Operador</li>
            <li>Apenas consulta</li>
          </ol>
        </div>
        <button type="submit" class="btn btn-success">Incluir usuário</button>
      </form>
    </div>
  </div>
</div>
<%- include('footer'); %>